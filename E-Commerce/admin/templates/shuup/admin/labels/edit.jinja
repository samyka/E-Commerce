{% extends "E-Commerce/admin/base.jinja" %}
{% from "E-Commerce/admin/macros/general.jinja" import single_section_form with context %}
{% from "E-Commerce/admin/macros/multilanguage.jinja" import language_dependent_content_tabs, render_monolingual_fields %}

{% block content %}
    {% call single_section_form("label_form", form) %}
        {{ language_dependent_content_tabs(form) }}
        <div class="form-divider"></div>
        {{ render_monolingual_fields(form) }}
    {% endcall %}
{% endblock %}
